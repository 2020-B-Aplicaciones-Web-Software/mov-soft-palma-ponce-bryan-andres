<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="390dp"
    android:layout_height="85dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sub_photo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/action_photo"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/sub_photo"
        app:layout_constraintTop_toTopOf="@+id/sub_photo"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/notif_info"
        android:layout_width="283dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/sub_photo"
        app:layout_constraintTop_toTopOf="@+id/sub_photo" />

    <TextView
        android:id="@+id/notif_content"
        android:layout_width="281dp"
        android:layout_height="22dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/notif_info"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/notif_info"
        app:layout_constraintTop_toBottomOf="@+id/notif_info" />
</androidx.constraintlayout.widget.ConstraintLayout>
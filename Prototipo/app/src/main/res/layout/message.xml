<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/message_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16"
        tools:srcCompat="@drawable/mail" />

    <TextView
        android:id="@+id/message_header"
        android:layout_width="296dp"
        android:layout_height="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/message_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_info"
        android:layout_width="296dp"
        android:layout_height="19dp"
        android:layout_marginTop="1dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/message_header"
        app:layout_constraintStart_toStartOf="@+id/message_header"
        app:layout_constraintTop_toBottomOf="@+id/message_header" />

    <TextView
        android:id="@+id/message_user"
        android:layout_width="297dp"
        android:layout_height="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/message_info"
        app:layout_constraintStart_toStartOf="@+id/message_info"
        app:layout_constraintTop_toBottomOf="@+id/message_info" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista_crear_libro">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/isbn"
        android:layout_width="223dp"
        android:layout_height="48dp"
        android:layout_marginStart="84dp"
        app:layout_constraintBottom_toBottomOf="@+id/label_isbn"
        app:layout_constraintStart_toEndOf="@+id/label_isbn"
        app:layout_constraintTop_toTopOf="@+id/label_isbn"
        app:layout_constraintVertical_bias="0.034"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/label_titulo_libro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Titulo del Libro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

    <TextView
        android:id="@+id/label_isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="62dp"
        android:text="ISBN"
        app:layout_constraintEnd_toEndOf="@+id/label_titulo_libro"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/label_titulo_libro"
        app:layout_constraintTop_toBottomOf="@+id/label_titulo_libro" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/titulo_libro"
        android:layout_width="233dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/label_titulo_libro"
        app:layout_constraintStart_toEndOf="@+id/label_titulo_libro"
        app:layout_constraintTop_toTopOf="@+id/label_titulo_libro"
        app:layout_constraintVertical_bias="0.52"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_cancelar_crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.856" />

    <Button
        android:id="@+id/btn_crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="@+id/btn_cancelar_crear"
        app:layout_constraintStart_toEndOf="@+id/btn_cancelar_crear"
        app:layout_constraintTop_toTopOf="@+id/btn_cancelar_crear" />

    <EditText
        android:id="@+id/sinopsis"
        android:layout_width="344dp"
        android:layout_height="146dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/label_sinopsis"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/label_sinopsis"
        app:layout_constraintTop_toTopOf="@+id/label_sinopsis"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/label_sinopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Sinopsis"
        app:layout_constraintEnd_toEndOf="@+id/label_isbn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/label_isbn"
        app:layout_constraintTop_toBottomOf="@+id/label_isbn" />

    <TextView
        android:id="@+id/label_autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Autor"
        app:layout_constraintEnd_toEndOf="@+id/label_isbn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/label_isbn"
        app:layout_constraintTop_toBottomOf="@+id/label_isbn" />

    <TextView
        android:id="@+id/fixed_autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="null"
        app:layout_constraintBottom_toBottomOf="@+id/label_autor"
        app:layout_constraintStart_toEndOf="@+id/label_autor"
        app:layout_constraintTop_toTopOf="@+id/label_autor"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
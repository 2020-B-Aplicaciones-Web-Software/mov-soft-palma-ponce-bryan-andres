<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista_crear_autor">

    <Button
        android:id="@+id/btn_guardar_autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/btn_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="@+id/btn_guardar_autor"
        app:layout_constraintEnd_toStartOf="@+id/btn_guardar_autor"
        app:layout_constraintTop_toTopOf="@+id/btn_guardar_autor"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nombre_autor"
        android:layout_width="218dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_form_nombre"
        app:layout_constraintStart_toEndOf="@+id/label_form_nombre"
        app:layout_constraintTop_toTopOf="@+id/label_form_nombre"
        app:layout_constraintVertical_bias="0.476" />

    <TextView
        android:id="@+id/label_form_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Autor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <TextView
        android:id="@+id/label_form_fecha_nac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Fecha de nacimiento"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/label_form_nombre"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="@+id/label_form_nombre"
        app:layout_constraintTop_toBottomOf="@+id/label_form_nombre" />

    <TextView
        android:id="@+id/label_form_pais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="PaÃ­s de nacimiento"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/label_form_fecha_nac"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/label_form_fecha_nac"
        app:layout_constraintTop_toBottomOf="@+id/label_form_fecha_nac" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/pais_nac"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_form_pais"
        app:layout_constraintStart_toEndOf="@+id/label_form_pais"
        app:layout_constraintTop_toTopOf="@+id/label_form_pais"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/fecha_nac"
        android:layout_width="211dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/label_form_fecha_nac"
        app:layout_constraintStart_toEndOf="@+id/label_form_fecha_nac"
        app:layout_constraintTop_toTopOf="@+id/label_form_fecha_nac" />

</androidx.constraintlayout.widget.ConstraintLayout>